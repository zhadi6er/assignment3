        <servlet-name>confirmServlet</servlet-name>
        <servlet-class>servlet.ConfirmServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>confirmServlet</servlet-name>
        <url-pattern>/confirm</url-pattern>
    </servlet-mapping>
</web-app>